<div id="taskdates">
  <h2 id="month">
    <%= link_to "<", date: @date.prev_month %>
    <%= @date.strftime("%B %Y") %>
    <%= link_to ">", date: @date.next_month %>
  </h2>
  <%= calendar @date do |date| %>
    <%= date.day %>
    <% if @taskdates_by_date[date] %>
      <ul>
        <% @taskdates_by_date[date].each do |taskdate| %>
          <li><%= link_to taskdate.thedate, taskdate %></li>
        <% end %>
        <% if @taskdates_by_date[date].blank? %>
        <li><%= link_to new_taskdate_path %></li>
        <% end %>
      </ul>
    <% end %>
  <% end %>
</div>