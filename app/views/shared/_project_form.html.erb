<%= form_for(@project) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
  	<%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :description %>
    <%= f.text_area :description %>

    <div><%= f.hidden_field :customer_id, :value => @customer.id %></div>
  </div>
  <%= f.submit "Add Project", class: "btn btn-large btn-primary" %>
<% end %>