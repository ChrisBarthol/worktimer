<% provide(:title, "Edit Customer") %>
<h1>Update a Customer</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@customer) do |f| %>
      <%= render 'shared/error_messages',object: f.object %>

      <%= f.label :company %>
<%= f.text_field :company %>

<%= f.label :address1 %>
<%= f.text_field :address1 %>

<%= f.label :address2 %>
<%= f.text_field :address2 %>

<%= f.label :address3 %>
<%= f.text_field :address3 %>

<%= f.label :city %>
<%= f.text_field :city %>

<%= f.label :state %>
<%= f.text_field :state %>

<%= f.label :zip %>
<%= f.text_field :zip %>

<%= f.label :phone1 %>
<%= f.text_field :phone1 %>

<%= f.label :phone2 %>
<%= f.text_field :phone2 %>

<%= f.label :fax1 %>
<%= f.text_field :fax1 %>

<%= f.label :fax2 %>
<%= f.text_field :fax2 %>

<%= f.label :email %>
<%= f.text_field :email %>

<%= f.label :website %>
<%= f.text_field :website %>

      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>

  </div>
</div>